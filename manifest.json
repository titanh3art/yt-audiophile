{
  "manifest_version": 3,
  "name": "YouTube Audiophile",
  "description": "A Chrome extension to hide video and thumbnails while playing only the audio on YouTube",
  "version": "1.2.0",
  "author": "titanh3art",
  "homepage_url": "https://github.com/titanh3art/yt-audiophile.git",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["setPlaybackQualityTiny.js", "setPlaybackQualityLarge.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
